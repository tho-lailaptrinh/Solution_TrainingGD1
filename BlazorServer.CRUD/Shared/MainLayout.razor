@using Blazored.Toast.Configuration
@inherits LayoutComponentBase

<BlazoredToasts Position="ToastPosition.BottomRight" Timeout="5" IconType="IconType.FontAwesome" ErrorIcon="fa fa-times"
                InfoIcon="fa fa-info" SuccessIcon="fa fa-check" WarningIcon="fa fa-exclamation" />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4"> 
            <AuthorizeView>
                <Authorized>
                    @* Show view đã được đăng nhập rồi *@
                    Hello, @context.User.Identity.Name
                    <a href="/logout">Logout</a>    
                </Authorized>
                <NotAuthorized>
                    @* Show view chưa đăng nhập *@
                    <p class="mt-3">Xin hãy đăng nhập</p>
                    <a href="/userlogin">Login</a>
                </NotAuthorized>
            </AuthorizeView>
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>
        <div class="content px-4">
            @Body
        </div>
    </div>
</div>
