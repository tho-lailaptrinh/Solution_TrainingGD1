@page "/chitietpk/{IdPK}"
@using BlazorServer.CRUD.Services;
@using PhongKhamNhaKhoa.Model;
@inject IPhieuKhamService PhieuKhamService;


<h3>Chi Tiết Phiếu Khám @IdPK </h3>
@if (RequestPKCT == null)
{
    <BlazorServer.CRUD.Component.LoadingIndicator></BlazorServer.CRUD.Component.LoadingIndicator>
}
else
{
    <table>
        @foreach (var item in RequestPKCT)
        {
            <tr>
                <th></th>
                <td></td>
            </tr>
            <tr>
                <th></th>
                <td></td>
            </tr>
            <tr>
                <th></th>
                <td></td>
            </tr>
            <tr>
                <th></th>
                <td></td>
            </tr>
            <tr>
                <th></th>
                <td></td>
            </tr>
            <tr>
                <th></th>
                <td></td>
            </tr>
        }
    </table>
}

@code {
    [Parameter]
    public string IdPK { get; set; }

    public List<PhieuKhamRequest> RequestPKCT;
    protected override async Task OnInitializedAsync()
    {
        RequestPKCT = await PhieuKhamService.GetListPKCT(IdPK);
    }
}
