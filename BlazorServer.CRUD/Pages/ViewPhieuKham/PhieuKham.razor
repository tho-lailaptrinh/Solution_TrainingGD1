@page "/phieukham"
@inject NavigationManager NavigationManager
@using BlazorServer.CRUD.Component

<h3>PhieuKham</h3>
@if (ListPhieuKham == null)
{
    <LoadingIndicator></LoadingIndicator> 
}
else
{
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Tên Phiếu Khám</th>
                    <th>Tên Khách Hàng</th>
                    <th>Tên Bác Sĩ</th>
                    <th>Tên Dịch Vụ</th>
                    <th>Tên Phòng</th>
                    <th>Thời Gian Tạo</th>
                    <th>Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ListPhieuKham)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.NameKH</td>
                        <td>@item.NameNV</td>
                        <td>@item.NameDV</td>
                        <td>@item.NamePK</td>
                        <td>@item.CreateDate.ToString("dd/MM/yyyy hh/mm")</td>
                        <td><StatusLable Status="@item.Status"></StatusLable></td>
                        <td>
                            <a href="/chitietpk/@item.Id">Chi Tiết</a>
                        </td>
                        <div>   
                            <button class="btn btn-primary">
                                <i class="oi oi-pencil" @onclick="UpdatePhieuKham"></i>
                            </button>
                            <button class="btn btn-danger">
                                <i class="oi oi-trash"></i>
                            </button>
                         </div>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <button class="btn btn-primary" @onclick="CreateNewPhieuKham">Create New</button>
    </div>
   
}

