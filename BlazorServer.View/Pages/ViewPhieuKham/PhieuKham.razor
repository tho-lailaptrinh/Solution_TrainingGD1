@page "/phieukham"
@inject NavigationManager NavigationManager

<h3>PhieuKham</h3>
@if (ListPhieuKham == null)
{
    <BlazorServer.View.Component.LoadingIndicator></BlazorServer.View.Component.LoadingIndicator>
}
else
{
    <div class="row">
        <table class="table table-info">
            <thead>
                <tr>
                    <th>Tên Phiếu Khám</th>
                    <th>Tên Khách Hàng</th>
                    <th>Tên Bác Sĩ</th>
                    <th>Tên Dịch Vụ</th>
                    <th>Tên Phòng</th>
                    <th>Thời Gian Tạo</th>
                    <th>Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ListPhieuKham)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.NameKH</td>
                        <td>@item.NameNV</td>
                        <td>@item.NameDV</td>
                        <td>@item.NamePK</td>
                        <td>@item.CreateDate.ToString("dd/MM/yyyy hh/mm")</td>
                        <td>@item.Status</td>
                        <td>
                            <a href="/chitietpk/@item.Id">Chi Tiết</a>
                        </td>
                        <button class="btn btn-primary">
                            <i class="oi oi-pencil"></i>
                        </button>
                        <td></td>
                        <button class="btn btn-danger">
                            <i class="oi oi-trash"></i>
                        </button>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <button class="btn btn-primary" @onclick="CreateNewPhieuKham">Create New</button>
    </div>
   
}

